{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2020"],
    "target": "ES2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": false,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "types": []
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
