{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "files": ["./src/index.ts"],
  "include": ["./src/**/*.ts"]
}
